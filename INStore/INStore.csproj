<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Remove="Language\Strings.ar-EG.resx" />
    <EmbeddedResource Remove="Language\Strings.en-US.resx" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\Fonts\Avatarock.ttf" />
    <None Remove="Resources\Fonts\Century_Gothic.ttf" />
    <None Remove="Resources\Fonts\gothicb.ttf" />
    <None Remove="Resources\Images\INstore Background - Solid.jpg" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\INStore.Domain\INStore.Domain.csproj" />
    <ProjectReference Include="..\INStore.EntityFramework\INStore.EntityFramework.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Controls\" />
    <Folder Include="UserControls\Login\Views\" />
    <Folder Include="UserControls\Login\ViewModels\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Language\Strings.ar-EG.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </None>
    <None Include="Language\Strings.en-US.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignColors" Version="2.1.1" />
    <PackageReference Include="MaterialDesignThemes.MahApps" Version="0.2.7" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Fonts\Avatarock.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Century_Gothic.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\gothicb.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Images\INstore Background - Solid.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Language\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Language\Strings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
