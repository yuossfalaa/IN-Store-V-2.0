<Window x:Class="INStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lex ="http://wpflocalizeextension.codeplex.com"
        xmlns:local="clr-namespace:INStore" 
        xmlns:ViewModels="clr-namespace:INStore.ViewModels" 
        xmlns:Converters="clr-namespace:INStore.Converters" 
        lex:LocalizeDictionary.DesignCulture="en"
        lex:ResxLocalizationProvider.DefaultAssembly="INStore"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        Title="MainWindow" Height="720" Width="1280" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" 
        WindowStyle="None"
        Background="{x:Null}">

    <Window.Resources>
        <Converters:CurrentViewModelToVisibilityConverter x:Key="CurrentViewModelToVisibilityConverter" TrueValue="Visible" FalseValue="Collapsed" />
        <Converters:CurrentViewModelToLogoutVisibilityConverter x:Key="CurrentViewModelToLogoutVisibilityConverter" TrueValue="Visible" FalseValue="Collapsed" />
    </Window.Resources>
    <Grid >
        <Border>
            <Image Source="\Resources\Images\INstore Background - Solid.jpg" Stretch="Fill"/>
        </Border>
        <Border VerticalAlignment="Top" HorizontalAlignment="Right" 
                Visibility="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource CurrentViewModelToVisibilityConverter}  }">
            <materialDesign:TransitioningContent Visibility="{Binding LogoVisibilty}">
                <materialDesign:TransitioningContent.OpeningEffects >
                    <materialDesign:TransitionEffect Kind="SlideInFromTop"/>
                    <materialDesign:TransitionEffect Kind="SlideInFromRight"/>
                </materialDesign:TransitioningContent.OpeningEffects>
                <Image Source="\Resources\Images\INstore Background - Logo.png" Width="1650" Height="1100" Margin="0 -320 -500 -400"/>
            </materialDesign:TransitioningContent>
        </Border>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="IN Store" 
                   FontFamily="{StaticResource Avatarock}" 
                   Foreground="White" 
                   FontSize="32"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="10,5,0,0"/>
            <StatusBar Grid.Row="0" 
                       Background="Transparent"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       MouseMove="TriggerMoveWindow"/>
            <StackPanel Height="40" HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Orientation="Horizontal">
                <ToggleButton  Height="30" Width="30" Margin="0,5,20,0" 
                    Style="{StaticResource MaterialDesignActionToggleButton}"
                    Foreground="Black"  
                    Background="Wheat"
                    IsChecked="{Binding IsEnglish}"
                    ToolTip="MaterialDesignActionLightToggleButton"
                    Content="{materialDesign:PackIcon Kind= Earth, Size=25}"
                    materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=AbjadArabic ,Size=25}" />

                <Button Height="30" Width="30" Margin="20,5,0,0" 
                     Style="{StaticResource MaterialDesignIconForegroundButton}" 
                        Foreground="{StaticResource DefaultButtonColor}"
                        Click="MinimizeWindow">
                    <materialDesign:PackIcon Kind="Minus" Height="25" Width="25"  />
                </Button>
                <Button Height="30" Width="30" Margin="20,5,0,0"  
                    Style="{StaticResource MaterialDesignIconForegroundButton}" 
                        Foreground="{StaticResource DefaultButtonColor}"
                    Click="MaximizeWindow" >
                    <materialDesign:PackIcon Kind="WindowMaximize" Height="25" Width="25" x:Name="MaximizeWindowPackIcon"/>
                </Button>
                <Button Height="30" Width="30" Margin="20,5,0,0" 
                    Style="{StaticResource MaterialDesignIconForegroundButton}" 
                        Foreground="{StaticResource DefaultButtonColor}"
                    Click="CloseApplication">
                    <materialDesign:PackIcon Kind="Close" Height="25" Width="25" />
                </Button>
            </StackPanel>
            <ContentControl Content="{Binding CurrentViewModel}" Grid.Row="1"  FlowDirection="{lex:Loc Key=GeneralFlowDirection}"/>
            <StackPanel Height="40" HorizontalAlignment="Left"
                    Margin="0,0,0,10"
                    Orientation="Horizontal" Grid.Row="2">
                <Button Height="30" Width="30" Margin="10,0,0,0" 
                     Style="{StaticResource MaterialDesignIconForegroundButton}"
                       Foreground="{StaticResource DefaultButtonColor}"
                       Visibility="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource CurrentViewModelToLogoutVisibilityConverter}  }">
                    <materialDesign:PackIcon Kind="Logout" Height="25" Width="25"  />
                </Button>

            </StackPanel>
        </Grid>
        <materialDesign:Snackbar MessageQueue="{Binding MyMessageQueue}"/>

    </Grid>
</Window>
