<Window x:Class="INStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:INStore" 
        xmlns:ViewModels="clr-namespace:INStore.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" 
        WindowStyle="None"
        Background="{x:Null}">
    <Window.DataContext>
        <ViewModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Border>
            <Image Source="\Resources\Images\INstore Background - Solid.jpg" Stretch="Fill"/>
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="IN Store" 
                   FontFamily="{StaticResource Avatarock}" 
                   Foreground="{StaticResource PrimaryHueDarkForegroundBrush}" 
                   FontSize="32"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="10,5,0,0"/>
            <StatusBar Grid.Row="0" 
                       Background="Transparent"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       MouseMove="TriggerMoveWindow"/>
            <StackPanel Height="40" HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Orientation="Horizontal">
                <Button Height="30" Width="30" Margin="0,5,20,0" 
                     Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon Kind="Logout" Height="25" Width="25"  />
                </Button>
                <Button Height="30" Width="30" Margin="20,5,0,0" 
                     Style="{StaticResource MaterialDesignIconForegroundButton}" Click="MinimizeWindow">
                    <materialDesign:PackIcon Kind="Minus" Height="25" Width="25"  />
                </Button>
                <Button Height="30" Width="30" Margin="20,5,0,0"  
                    Style="{StaticResource MaterialDesignIconForegroundButton}" 
                    Click="MaximizeWindow" >
                    <materialDesign:PackIcon Kind="WindowMaximize" Height="25" Width="25" x:Name="MaximizeWindowPackIcon"/>
                </Button>
                <Button Height="30" Width="30" Margin="20,5,0,0" 
                    Style="{StaticResource MaterialDesignIconButton}" 
                    Click="CloseApplication">
                    <materialDesign:PackIcon Kind="Close" Height="25" Width="25" />
                </Button>
            </StackPanel>
            <ContentControl Content="{Binding Navigator.CurrentViewModel}" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
